<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".vendor.VendorHomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/spinner_selected_bk"
            android:fontFamily="@font/open_sans_bold"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="20dp"
            android:paddingBottom="8dp"
            android:text="Vendor's Home"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tag">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/vendorMaterialsFAB"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/materials_list"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:icon="@drawable/ic_materials_ico"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/vendorInfoFAB"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/my_info"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:icon="@drawable/ic_info_ico"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/logOutFAB"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/log_out"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:icon="@drawable/logout"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>